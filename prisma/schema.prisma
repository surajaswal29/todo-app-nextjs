generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ToDoTask {
  id          Int     @id @default(autoincrement())
  title       String  @unique
  description String
  status      String  @default("upcoming")
  isCompleted Boolean @default(false)
  createdOn   String
}